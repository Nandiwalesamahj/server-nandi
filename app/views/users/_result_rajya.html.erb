<% if @users %>
    <% if @users.size > 0 %>
    
      <div id='friend-lookup-results' class='well col-xs-12'>
        
   <!--  <%= count = 0 %> -->
           <% @users.each do |user| %>
           
          
           <div class="col-xs-11 col-xs-offset-1 marginn">
          <!--  <%= count = count+1 %> -->
            <div class="col-xs-5">
                    
                    <% if user.gender == "Male" %>
                    <%= image_tag('male-no-avatar.png') %>
                    <% elsif user.gender == "Female" %>
                    <%= image_tag('female-no-avatar.png') %>
                    <% end %>
                    </div>
           <div class="col-xs-7"><p><%= user.first_name %> <%= user.last_name %></p>
           <p><%= user.address %> <%= user.work_at_district %></p>
           <p class="post-options">
              <%= simple_form_for user do |f| %>
              <%= f.input :adhikari_type,as: :select,  collection: [:राज्य_संघटना_पदाधिकारी,:युवा_संघटना],label: "अधिकारी प्रकार", input_html: {class: "chosen-select"} %>
              <%= f.input :rajya_approval, collection: [:Yes, :No], as: :radio_buttons %>
              <%= f.submit %>
              <% end %>
           </p></div>
            </div>  
           <% end %>
   
      </div>
    <% else %>
    <p class='lead col-xs-10'>
      No users matched search
    </p>
    <% end %>
  <% end %> 
