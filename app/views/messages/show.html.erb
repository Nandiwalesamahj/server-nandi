
<div class="row">
<%= render 'home/sidebar' %>
	<div class="col-xs-6 col-xs-offset-1">
	<h1 align="center">संदेश</h1>
	<hr>
          <div class="panel panel-info">
            <div class="panel-heading">
				<h2 align="left"><%= @message.title %></h2>
			</div>
			 <div class="panel-body">
				<p><h4 align="left"><%= simple_format(@message.description) %></h4></p>
				<p><b>Attachment-</b></p>
				<% if @message.attachment? %>
				<p><%= link_to "#{truncate(File.basename(@message.attachment.path),length: 25)}", :action => 'download_file', :controller=>"messages", :id => @message.id,:target => "_blank" %>
					<% end %>
				</p>
			</div>
			<div class="panel-footer">
				<% if user_signed_in? && (@message.user_id = current_user.id) %>
					<%= link_to "Delete", message_path(@message),method: :delete,data: {confirm: "Confirm Delete"},class: "btn btn-danger btn-sm btn-responsive" %>

				<% end %>
			</div>
	
	</div>
</div>
</div>
